<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="sutdaGame.web.dao.OwnerDAO">

	<select id="login" parameterType="String" resultType="PlayerVO">
		SELECT
			`no`,
			`name`,
			`phone`,
			`id`,
			`pw`,
			`email`,
			`join_date` as joinDate
		FROM
			owner
		WHERE
			id=#{id} AND pw=#{pw}
	</select>

	<select id="selectID" parameterType="String" resultType="int">
		SELECT
			count(*)
		FROM
			owner
		WHERE
			id=#{id}
	</select>
	
	<insert id="join" parameterType="PlayerVO" useGeneratedKeys="true" keyColumn="no" keyProperty="no">
		INSERT 
		INTO owner(
			`name`,
			`phone`,
			`id`,
			`pw`,
			`email`, 
			`bank_account`,
			`bank_name`)
		VALUES(
			#{name},
			#{phone },
			#{id },
			#{pw },
			#{email}, 
			#{bankAccount},
			#{bankName})
	</insert>
	
	<select id="selectOwner" parameterType="int" resultType="PlayerVO">
		SELECT 
			`no`,
			`name`,
			`phone`,
			`id`,
			`pw`,
			`email`,
			`join_date` as joinDate,
			`bank_account` as bankAccount,
			`bank_name` as bankName
		FROM
			owner
		WHERE 
			no=#{no}
	</select>

	<update id="updateOwner" parameterType="PlayerVO">
		UPDATE
			owner 
		SET(
			`phone` =#{phone},
			`pw`=#{pw},
			`email`=#{email})
		WHERE no=#{no}
	</update>
	
	<delete id="deleteOwner" parameterType="int">
		DELETE FROM owner
		WHERE no=#{no}
	</delete>

<!--
CREATE TABLE owner
(
    `no`               INT            NOT NULL    AUTO_INCREMENT COMMENT '가입 번호', 
    `name`             VARCHAR(16)    NOT NULL    COMMENT '성함', 
    `phone`            INT(11)        NOT NULL    COMMENT '핸드폰 번호', 
    `id`               VARCHAR(24)    NOT NULL    COMMENT '아이디', 
    `pw`               VARCHAR(24)    NOT NULL    COMMENT '비밀번호', 
    `email`            VARCHAR(32)    NOT NULL    COMMENT '이메일', 
    `membership_date`  TIMESTAMP      NOT NULL    DEFAULT CURRENT_TIMESTAMP COMMENT '가입일', 
    PRIMARY KEY (no)
);
 -->

</mapper>