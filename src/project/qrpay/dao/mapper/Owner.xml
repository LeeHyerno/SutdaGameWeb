<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.qrpay.dao.OwnerDAO">

	<select id="login" parameterType="OwnerVO" resultType="OwnerVO">
		SELECT
			*
		FROM
			owner
		WHERE
			id=#{id} AND pw=#{pw}
	</select>

	<select id="selectID" parameterType="String" resultType="int">
		SELECT
			count(*)
		FROM
			owner
		WHERE
			id=#{id}
	</select>

<!--
 	public void join(OwnerVO ownerVO);			//회원가입
	public OwnerVO login(OwnerVO ownerVO);		//로그인
	
 -->

