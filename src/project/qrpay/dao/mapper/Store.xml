<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project.qrpay.dao.StoreDAO">
	<insert id="insertStore" parameterType="StoreVO">
		INSERT INTO store(
			store_no,
			store_name,
			type,
			license_number,
			address,
			owner_no,
			table_count)
		VALUES
			#{store_no },
			#{store_name },
			#{type },
			#{licenseNumber },
			#{address },
			#{ownerNo },
			#{tableCount}
		);
	</insert>
	
	<select id="selectMenu" parameterType="int" resultType="MenuVO">
		SELECT
	</select>
	
</mapper>
